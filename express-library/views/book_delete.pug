extends layout

block content
  h1 #{title}: #{book.title}

  if book_instances && book_instances.length
    p Please delete the following book instances before attempting to delete this book.
    ul
      each instance in book_instances
        li
          a(href=instance.url) #{instance.imprint} (#{instance.status})
  else
    p Do you really want to delete this book?
    form(method='POST' action='')
      input(type='hidden', name='bookid', value=book._id)
      button.btn.btn-danger(type='submit') Delete
